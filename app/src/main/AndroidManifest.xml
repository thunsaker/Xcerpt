<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ericbai.com.sharepiece" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".PasteActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HighlightActivity"
            android:label="@string/title_activity_highlight"
            android:parentActivityName=".PasteActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ericbai.com.sharepiece.PasteActivity" />
        </activity>
    </application>

</manifest>
