<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape
            android:shape="oval">
            <solid
                android:color="@color/md_blue_grey_400" />
            <stroke
                android:width="3dp"
                android:color="@color/tw__transparent" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape
            android:shape="oval">
            <solid
                android:color="@color/md_blue_grey_400" />
            <stroke
                android:width="3dp"
                android:color="@color/tw__transparent" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape
            android:shape="oval">
            <solid
                android:color="@color/md_blue_grey_300" />
            <stroke
                android:width="3dp"
                android:color="@color/tw__transparent" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>